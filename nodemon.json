{
  "$schema": "http://json.schemastore.org/nodemon",
  "ignore": [".git", "node_modules/", "out/"],
  "watch": ["src/"],
  "execMap": {
    "ts": "node -r ts-node/register"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts",
  "restartable": "rs",
  "events": {
    "start": "cls || clear"
  }
}
